<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<hr>
<% if @task.completed %>
<p>This task is completed</p>
<% else %>
<p>This task is not yet completed</p>
<% end %>
<hr>
<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to "Back to list", tasks_path %>
